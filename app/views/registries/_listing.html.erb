<div class="listings">
	<% items.each do |registry| %>
		<div class="listing_item">
			<p class="name">
				<%= link_to(display_name(registry), registry_path(registry)) -%>
			</p>
			
			<% unless registry.description.blank? %>
				<p class="desc"> 
					<%= h(strip_tags(registry.description)) -%>
				</p>
			<% end %>
			
			<p class="details">
				<b>Homepage:</b>
				<% unless registry.homepage.blank? %>
					<%= link_to h(registry.homepage), registry_url(registry) -%>
				<% else %>
					<span class="none_text">none</span>
				<% end %>
			</p>
		</div>
	<% end %>
</div>

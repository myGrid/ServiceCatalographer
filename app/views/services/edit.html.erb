<h1>Editing Service</h1>

<%= form_for(@service) do |f| %>
    <% if !@service.nil? && !@service.errors.nil? then %>
        <% @service.errors.full_messages.each do |err| %>
            <%= err %>
        <% end %>
    <% end %>

  <p>
    <%= f.label :service_type %><br />
    <%= f.text_field :service_type %>
  </p>
  <p>
    <%= f.label :unique_code %><br />
    <%= f.text_field :unique_code %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @service %> |
<%= link_to 'Back', services_path %>

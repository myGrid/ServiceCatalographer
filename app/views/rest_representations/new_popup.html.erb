%>

<div class="redbox_contents" style="width:500px;">
	<div class="head">
		<%= link_to_close_redbox image_tag("close.gif"), :style => "float:right; margin-left:0.5em; vertical-align:middle;" -%>
    <span style="vertical-align:middle;">Add New Representations</span>
	</div>
	
	<div class="body">
    <%= form_for :rest_method, :url => {:controller => "rest_representations", :action => "add_new_representations", :rest_method_id => @rest_method.id } do |f| %>
          <% if !@rest_method.nil? && !@rest_method.errors.nil? then %>
              <% @rest_method.errors.full_messages.each do |err| %>
                  <%= err %>
              <% end %>
          <% end %>

    <div>
			<div class="box_info_standout">
				<%= annotation_add_info_text("this text is ignored in this case", @rest_method) -%>				
			</div>

      <p class="step_text">
        List the representations (content types) you would like to add:
      </p>

      <!--REPRESENTATIONS CAPTURE HELP BOX-->
      <%= render :partial => "rest_representations/help_box" -%>
      
      <!--REPRESENTATIONS CAPTURE TEXT AREA-->
      <p class="high_linespaced form_field_section">
        <%= text_area_tag "rest_representations", params[:rest_representations],
            :size => "50x7", :style => "width: 99%;" %>
        <%= hidden_field_tag "http_cycle", params[:http_cycle] %>
      </p>

      <!--SUBMIT-->
      <p style="margin-top: 1.5em; text-align: center;">
        <%= f.submit "Submit", :disable_with => "Submitting..." -%>
				<%= button_to_function "Close", "RedBox.close()" -%>
      </p>

    </div>
  
  <% end %>
  
 	</div>
</div>

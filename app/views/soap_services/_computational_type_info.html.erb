<% unless thing.nil? %>
	<div class="annotations_container">
		<div style="margin-top: 1em;">
		  <b>Computational Type:</b>
		</div>
		
		<div class="box_annotations">
			<% if thing.computational_type_details.blank? and thing.computational_type.blank? %>
				<span class="none_text">unknown</span>
			<% else %>
				<% rounded(annotation_text_item_background_color, "#333", "100%") do %>
					<div class="text">
						<span class="annotation_source_text annotation_source_provider">
							<span>from </span>
							<%= annotation_source_icon("ServiceProvider") -%>
							<span><b>provider's description doc</b></span>
							<span class='ago'><%= "(#{distance_of_time_in_words_to_now(thing.updated_at)} ago)" -%></span>
						</span>
						<div class="computational_type_details">
							<% if thing.computational_type_details.blank? %>
								<%= thing.computational_type.html_safe -%>
							<% else %>
								<%= render_computational_type_details(thing.computational_type_details) -%>
							<% end %>
						</div>
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
<% end %>



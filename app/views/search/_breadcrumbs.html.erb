<% case controller.action_name.downcase; when "show" -%>
    <li><%= link_to("Search", search_url) -%></li>

    <li><b>&#187;</b></li>

    <% if @query.blank? %>
        <li><span>Please specify a search query...</span></li>
    <% else %>
        <li><span><%= @scope.titleize -%></span></li>
        <li><b>&#187;</b></li>
        <li><span><%= "Results for '#{h(@query)}'" -%></span></li>
    <% end %>

<% when "by_data" %>

    <li><%= link_to("Search By Data", search_by_data_url) -%></li>

<% else -%>
    <!-- no breadcrumb -->
<% end -%>

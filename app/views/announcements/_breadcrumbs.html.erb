  <% case controller.action_name.to_s; when "show" %>
    <li><span><%= display_name(@announcement) -%></span></li>
  <% when "new" %>
    <li><span>New Announcement</span></li>
  <% when "edit" %>
		<li><%= link_to "#{display_name(@announcement)}", announcement_path(@announcement) -%></li>
		<li><b>&#187;</b></li>
    <li><span>Edit</span></li>
  <% else %>
    <!-- no breadcrumb -->
  <% end %>

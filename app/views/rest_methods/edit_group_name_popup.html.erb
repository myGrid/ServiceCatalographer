<div class="redbox_contents" style="width:500px;">
	<div class="head">
		<%= link_to_close_redbox image_tag("close.gif"), :style => "float:right; margin-left:0.5em; vertical-align:middle;" -%>
    <span style="vertical-align:middle;">Set the Group for this REST Endpoint</span>
	</div>
	
	<div class="body">
    <%= form_tag update_group_name_rest_method_path(@rest_method) do %>
      <div>
        <div class="box_info_standout" style="font-size:100%" >
          You are setting the group for endpoint:
          <b><%= h @rest_method.display_name -%></b>
        </div>
        
        <p class="high_linespaced form_field_section">
          <%= text_field_tag "group_name", h(@rest_method.group_name), :size => "50", :style => "width: 99%;", :id => "group_name_field", :autocomplete => "on", :style => "width: 99%;" %>
          
          <div class="auto_complete" id="rest_method_group_name_auto_complete"></div>

          <%= auto_complete_field "group_name_field",
                                  :update => "rest_method_group_name_auto_complete",
                                  :url => group_name_auto_complete_rest_method_url(@rest_method),
                                  :min_chars => 1 -%>
        </p>
        
        <p style="margin-top: 1.5em; text-align: center;">
          <%= submit_tag "Submit", :disable_with => "Submitting..." -%>
  				<%= button_to_function "Close", "RedBox.close()" -%>
        </p>
      </div>
    <% end %>  
 	</div>
  
</div>

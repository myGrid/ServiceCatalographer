<span class="inline-block">
  <span style="vertical-align: middle; font-weight: bold;">
    Sort by:
  </span>

  <span style="vertical-align: middle; padding: 0; margin-left: 0.3em; width: 100%;">
    <select name="url_field" onchange="loadUrlFromSelectInputTag(this); return false;">
      <option value="<%= generate_sort_url('users', 'name', 'asc') -%>" <%= "selected" if is_sort_selected('name', 'asc') -%>>
        Name (A-Z)
      </option>
      <option value="<%= generate_sort_url('users', 'name', 'desc') -%>" <%= "selected" if is_sort_selected('name', 'desc') -%>>
        Name (Z-A)
      </option>
      <option value="<%= generate_sort_url('users', 'activated', 'desc') -%>" <%= "selected" if is_sort_selected('activated', 'desc') -%>>
        Newest
      </option>
      <option value="<%= generate_sort_url('users', 'activated', 'asc') -%>" <%= "selected" if is_sort_selected('activated', 'asc') -%>>
        Earliest
      </option>
    </select>
  </span>
</span>
